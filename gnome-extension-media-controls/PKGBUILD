# Maintainer: Lucas Burlingham <lucas@lucasburlingham.me>
pkgname=gnome-extension-media-controls
pkgver=21.09.16
pkgrel=17
pkgdesc="A media indicator for the GNOME shell"
arch=('any')
url="https://github.com/cliffniff/media-controls"
license=('MIT')
makedepends=('git')
depends=('gnome-shell')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${pkgname}::"git+${url}")
sha256sums=('SKIP')

build() {
	sh ${srcdir}/${pkgname}/build.sh
}

package() {
	echo "Done!"
}
